{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "Build default",
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "dependsOn": ["Build"]
      },
      { 
        "type": "shell",
        "label": "Build",
        "dependsOn": [
          "Create build dirs",
          "Build debug"
        ],
      },
      { 
        "type": "shell",
        "label": "Build templater",
        "dependsOn": [
          "Create templater build dirs",
          "Build templater code"
        ],
      },
      {
        "type": "shell",
        "label": "Create build dirs",
        "command": "mkdir",
        "args": [
          "${fileDirname}\\bin",
          "${fileDirname}\\obj",
        ],
      },
      {
        "type": "shell",
        "label": "Create templater build dirs",
        "command": "mkdir",
        "args": [
          "AoC_template\\bin",
          "AoC_template\\obj",
        ],
      },
      {
        "type": "shell",
        "label": "Build debug",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "${relativeFileDirname}\\bin\\${fileBasenameNoExtension}.exe",
          "/Fo:${relativeFileDirname}\\obj\\",
          "/Fd:${relativeFileDirname}\\bin\\",
          "${workspaceFolder}\\helpers.cpp",
          "${file}",
          "/std:c++20"
        ],
        "problemMatcher": ["$msCompile"],
      },
      {
        "type": "shell",
        "label": "Build templater code",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "AoC_template\\bin\\templater.exe",
          "/Fo:AoC_template\\obj\\",
          "/Fd:AoC_template\\bin\\",
          "AoC_template\\templater.cpp",
          "/std:c++20"
        ],
        "problemMatcher": ["$msCompile"],
      },
    ],
  }