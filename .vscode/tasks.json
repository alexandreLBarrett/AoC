{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "Build debug",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "${relativeFileDirname}\\bin\\${fileBasenameNoExtension}.exe",
          "/Fo:${relativeFileDirname}\\obj\\",
          "/Fd:${relativeFileDirname}\\bin\\",
          "${workspaceFolder}\\helpers.cpp",
          "${file}",
          "/std:c++20"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "Build templater",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "AoC_template\\bin\\templater.exe",
          "/Fo:AoC_template\\obj\\",
          "/Fd:AoC_template\\bin\\",
          "AoC_template\\templater.cpp",
          "/std:c++20"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": false
        },
      },
    ],
    
  }