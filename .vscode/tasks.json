{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "Build default",
        "problemMatcher": [
          "$msCompile"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "dependsOn": [
          "Build"
        ]
      },
      {
        "type": "shell",
        "label": "Build",
        "dependsOn": [
          "Create build dirs",
          "Build debug"
        ]
      },
      {
        "label": "run templater",
        "command": "AoC_template\\bin\\templater.exe",
        "args": [
          "-output_path=${workspaceFolder}",
          "-year=${input:year}",
          "-day=${input:day}"
        ],
        "problemMatcher": []
      },
      {
        "type": "shell",
        "label": "Build templater",
        "dependsOn": [
          "Create templater build dirs",
          "Build templater code"
        ]
      },
      {
        "type": "shell",
        "label": "Create build dirs",
        "command": "if not exist \"${fileDirname}\\bin\" mkdir \"${fileDirname}\\bin\" && if not exist \"${fileDirname}\\obj\" mkdir \"${fileDirname}\\obj\""
      },
      {
        "type": "shell",
        "label": "Create templater build dirs",
        "command": "if not exist \"AoC_template\\bin\" mkdir \"AoC_template\\bin\" && if not exist \"AoC_template\\obj\" mkdir \"AoC_template\\obj\""
      },
      {
        "type": "shell",
        "label": "Build debug",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "${relativeFileDirname}\\bin\\${fileBasenameNoExtension}.exe",
          "/Fo:${relativeFileDirname}\\obj\\",
          "/Fd:${relativeFileDirname}\\bin\\",
          "${workspaceFolder}\\helpers.cpp",
          "${file}",
          "/std:c++20"
        ],
        "problemMatcher": [
          "$msCompile"
        ]
      },
      {
        "type": "shell",
        "label": "Build templater code",
        "command": "cl.exe",
        "args": [
          "/Zi",
          "/EHsc",
          "/Fe:",
          "AoC_template\\bin\\templater.exe",
          "/Fo:AoC_template\\obj\\",
          "/Fd:AoC_template\\bin\\",
          "AoC_template\\templater.cpp",
          "/std:c++20"
        ],
        "problemMatcher": [
          "$msCompile"
        ]
      }
    ],
    "inputs": [
      {
          "id": "year",
          "description": "year:",
          "default": "202",
          "type": "promptString"
      },
      {
          "id": "day",
          "description": "day:",
          "default": "0",
          "type": "promptString"
      },
    ]
  }